<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:carcview="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:layout_margin="8dp"
    android:background="#ffffff"
    android:elevation="1dp"
    carcview:cardCornerRadius="4dp"
    android:id="@+id/cardView"

    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/coon">

        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@drawable/shop123"
            android:scaleType="centerCrop"
            carcview:layout_constraintBottom_toBottomOf="parent"
            carcview:layout_constraintEnd_toEndOf="parent"
            carcview:layout_constraintHorizontal_bias="0.0"

            carcview:layout_constraintStart_toStartOf="parent"
            carcview:layout_constraintTop_toTopOf="parent"
            carcview:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/bn"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_gravity="center"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="Event Name"
            android:textColor="#2d2d2d"
            android:textSize="20sp"
            carcview:layout_constraintBottom_toBottomOf="parent"
            carcview:layout_constraintEnd_toEndOf="parent"
            carcview:layout_constraintHorizontal_bias="0.0"
            carcview:layout_constraintStart_toStartOf="parent"
            carcview:layout_constraintTop_toBottomOf="@+id/img"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            carcview:layout_constraintBottom_toBottomOf="parent"
            carcview:layout_constraintEnd_toEndOf="@+id/img"
            carcview:layout_constraintHorizontal_bias="0.934"
            carcview:layout_constraintStart_toStartOf="@+id/img"
            carcview:layout_constraintTop_toTopOf="@+id/img"
            carcview:layout_constraintVertical_bias="0.92"></TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>